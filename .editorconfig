root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
max_line_length = 120

[*.md]
indent_style = space
indent_size = 2
max_line_length = off

[*.py]
max_line_length = off

[*.yml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = space
indent_size = 4

[LICENSE]
indent_style = unset
